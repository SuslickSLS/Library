<Window x:Class="Library.WindowsPages.UpdateReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.WindowsPages"
        xmlns:rule="clr-namespace:Library.Validation"
        mc:Ignorable="d"
        Title="UpdateReaderWindow" Height="450" Width="800" Background="#172d4a" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="57*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/ImageBooks/Photo.png" Grid.Column="0"/>
        <StackPanel Grid.Column="1" Grid.RowSpan="2" >
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label FontSize="18" Foreground="White" Content="Фамилия: "/>
                <TextBox FontSize="18"  Width="200"  Name="TextBox_Surname" Validation.Error="Texbox_error" >
                    <TextBox.Text>
                        <Binding Path="Reader_surname" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <rule:NonEmptyTextRule MinimumCharacters="3"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <Label FontSize="18" Foreground="White" Content="Имя:          "/>
                <TextBox FontSize="18" Width="200" Name="Name_TextBox" Validation.Error="Texbox_error">
                    <TextBox.Text >
                        <Binding Path="Reader_name"  UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <rule:NonEmptyTextRule MinimumCharacters="3"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <Label FontSize="18" Foreground="White" Content="Отчество: "/>
                <TextBox  FontSize="18" Width="200" Name="Middlename_TextBox"  Validation.Error="Texbox_error"  >
                    <TextBox.Text>
                        <Binding Path="Reader_MiddleName"  UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <rule:NonEmptyTextRule MinimumCharacters="3"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                <Label FontSize="18" Foreground="White" Content="Адрес:    "/>
                <TextBox FontSize="18" Width="200" Name="Address_TextBox"  Validation.Error="Texbox_error"   >
                    <TextBox.Text>
                        <Binding Path="address"  UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True"  >
                            <Binding.ValidationRules>
                                <rule:AddressValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="0,10,0,20" Orientation="Horizontal">
                <Label FontSize="18" Foreground="White" Content="Телефон:  "/>
                <TextBox FontSize="18" Width="200" Name="Phone_TextBox"  Validation.Error="Texbox_error">
                    <TextBox.Text>
                        <Binding Path="Phone"  UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <rule:PhoneValidationRules/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <Label FontSize="18" Foreground="White" Content="Фотография:"/>
            <TextBox />
            <Label Name="ErrorLabel" Foreground="White"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button FontSize="18" Content="Назад" Margin="0,10,10,0" Foreground="Black" Background="White" Width="100" Height="35" Click="GotoBack"/>
                <Button FontSize="18" Click="UpdateReaders" Name="UpdateReader" Content="Добавить" Margin="0,10,0,0" Foreground="Black" Background="White" Width="100" Height="35"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>

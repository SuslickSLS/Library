<Window x:Class="Library.WindowsPages.AddOrderBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.WindowsPages"
        mc:Ignorable="d"
        Title="AddOrderBook" Height="300" Width="450">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Width" Value="100"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Читатель:" Margin="0,0,10,0"/>
            <ComboBox Name="ReadersComboBox">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding Reader_surname}"/>
                            <Run Text="{Binding Reader_name}"/>
                            <Run Text="{Binding Reader_MiddleName}"/>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Книги:" Margin="0,0,10,0"/>
            <ComboBox Name="BooksComboBox" Margin="0,0,10,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding Book_title}"/>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Добавить читателя" Click="GoToAddReaders"/>
        </StackPanel>
        <Button Content="Добавить" Width="200" Click="AddOrderBookButton"/>
    </StackPanel>
</Window>
